<%- include('partials/header', { user }) %>
<h2>Спец-наборы (обеды)</h2>
<ul>
  <% lunches.forEach(l=>{ %>
    <li>
      <strong><%= l.name %></strong> — <%= l.price %>&#8381;
      <form method="post" action="/sale-lunch" style="display:inline">
        <input type="hidden" name="lunch_id" value="<%= l.id %>">
        <input type="number" name="quantity" value="1" min="1" style="width:3em">
        <button type="submit">Продать</button>
      </form>
    </li>
  <% }) %>
</ul>
