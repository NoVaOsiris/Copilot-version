<%- include('partials/header', { user }) %>
<h2>Пользователи</h2>
<form method="post" action="/admin/users">
  <input name="username" placeholder="Логин" required>
  <input name="password" placeholder="Пароль" required>
  <button type="submit">Добавить кассира</button>
</form>
<table>
  <tr><th>ID</th><th>Логин</th><th>Роль</th><th>Сменить пароль</th></tr>
  <% users.forEach(u=>{ %>
    <tr>
      <td><%= u.id %></td>
      <td><%= u.username %></td>
      <td><%= u.role %></td>
      <td>
        <form method="post" action="/admin/users/<%=u.id%>/password">
          <input name="newpass" placeholder="Новый пароль" required>
          <button type="submit">Сменить</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
