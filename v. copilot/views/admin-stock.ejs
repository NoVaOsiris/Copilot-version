<%- include('partials/header', { user }) %>
<h2>Учёт остатков</h2>

<form method="post" action="/admin/stock">
  <select name="product_id">
    <% stock.products.forEach(p=>{ %>
      <option value="<%=p.id%>"><%=p.name%></option>
    <% }) %>
  </select>
  <select name="point_id">
    <% stock.points.forEach(pt=>{ %>
      <option value="<%=pt.id%>"><%=pt.name%></option>
    <% }) %>
  </select>
  <select name="type">
    <option value="in">Приход</option>
    <option value="out">Расход</option>
  </select>
  <input type="number" name="quantity" min="1" required>
  <button type="submit">Записать</button>
</form>

<table>
  <tr><th>Товар</th><th>Точка</th><th>Тип</th><th>Кол-во</th><th>Время</th></tr>
  <% stock.rows.forEach(r=>{ %>
    <tr>
      <td><%= r.name %></td>
      <td><%= r.point %></td>
      <td><%= r.type %></td>
      <td><%= r.quantity %></td>
      <td><%= r.timestamp %></td>
    </tr>
  <% }) %>
</table>
